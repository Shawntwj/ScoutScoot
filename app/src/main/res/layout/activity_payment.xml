<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

    <!-- background image-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/payment_background" />

    <!--destination 1 to 2 -->
    <LinearLayout
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/fromDestination"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:background="@drawable/destination_box"
            android:gravity="center"
            android:padding="15sp"
            android:text="520366"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20sp"
            android:src="@drawable/right_arrow" />

        <TextView
            android:id="@+id/toDestination"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:background="@drawable/destination_box"
            android:gravity="center"
            android:padding="15sp"
            android:text="188065" />

    </LinearLayout>

    <!-- distance and time -->
    <LinearLayout
        android:id="@+id/distanceAndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination"
        android:gravity="center">
        <!-- distance -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="20sp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/distance" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance: "
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/distanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 "
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/distanceMetric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KM"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="25sp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/time" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: "
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/timeValueHr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/timeValueMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00 "
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/timeMetric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hr"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <!-- layout for buttons-->


    <!--     used for price -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/distanceAndTime"
        android:layout_marginTop="20sp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wallet" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/priceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>




    <!--testing -->
<!--    <Button-->
<!--        android:id="@+id/changeButton"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="change price"-->
<!--        android:onClick="changePrice"/>-->

    <!-- payment button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/payment"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="@drawable/round_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="presentPaymentSheet"
        android:text="Proceed to pay"
        />

</RelativeLayout>